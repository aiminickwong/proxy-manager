{block content}
	<div class="col-md-12 crts">
		{form form}
			<div class="alert alert-danger" n:foreach="$form->errors as $error">{$error}</div>

			<div class="form-group">
				{label login /}
				{input login, class => 'form-control'}
			</div>

			<div class="form-group">
				{label password /}
				{input password, class => 'form-control'}
			</div>

			{input send, class => 'btn btn-default'}
		{/form}
	</div>
{/block}
